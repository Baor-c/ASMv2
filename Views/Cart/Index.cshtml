@model List<FastFoodApp.ViewModels.CartItemViewModel>
@{
    ViewData["Title"] = "Giỏ hàng";
    var subtotal = Model.Sum(item => item.ThanhTien);
}

<div class="min-h-screen bg-gray-50 py-8">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
        <!-- Header -->
        <div class="flex items-center mb-8 animate-fade-in">
            <a asp-controller="Product" asp-action="Index" class="mr-4 p-2 rounded-full hover:bg-gray-200 transition-colors">
                <i data-lucide="arrow-left" class="h-6 w-6 text-gray-600"></i>
            </a>
            <h1 class="text-2xl font-bold text-gray-900">
                Giỏ hàng (@Model.Count món)
            </h1>
        </div>

        @if (!Model.Any())
        {
                <div class="text-center py-16 animate-zoom-in">
                    <div class="text-6xl mb-6">🛒</div>
                    <h2 class="text-2xl font-bold text-gray-900 mb-4">Giỏ hàng của bạn đang trống</h2>
                    <p class="text-gray-600 mb-8">Hãy thêm một số món ngon vào giỏ hàng để bắt đầu đặt hàng.</p>
                    <a asp-controller="Product" asp-action="Index" class="bg-red-600 text-white px-8 py-3 rounded-lg font-semibold hover:bg-red-700 transition-transform transform hover:scale-105 inline-block">
                        Xem Thực Đơn
                    </a>
                </div>
        }
        else
        {
                <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
                    <!-- Cart Items -->
                    <div class="lg:col-span-2">
                        <div class="bg-white rounded-xl shadow-lg p-6 animate-slide-up">
                            <div class="flex items-center justify-between mb-6">
                                <h2 class="text-xl font-semibold">Món đã chọn</h2>
                                <a asp-controller="Cart" asp-action="ClearCart" class="text-red-600 hover:text-red-700 text-sm font-medium">Xóa tất cả</a>
                            </div>

                            <form asp-controller="Cart" asp-action="UpdateCart" method="post">
                                <div class="space-y-4">
                                @for (int i = 0; i < Model.Count; i++)
                                {
                                    var item = Model[i];
                                            <div class="flex items-center space-x-4 py-4 border-b border-gray-200 last:border-b-0">
                                                <div class="w-20 h-20 rounded-lg overflow-hidden flex-shrink-0">
                                                    <img src="data:image/png;base64,@item.HinhAnh" alt="@item.TenSanPham" class="w-full h-full object-cover" />
                                                </div>

                                                <div class="flex-1">
                                                    <h3 class="font-semibold text-gray-900">@item.TenSanPham</h3>
                                                    <p class="text-sm text-gray-600">@item.DonGia.ToString("N0")đ</p>
                                                </div>

                                                <div class="flex items-center space-x-2">
                                                    <input type="hidden" name="quantities[@i].Key" value="@item.MaMonAn" />
                                                    <input type="number" name="quantities[@i].Value" value="@item.SoLuong" class="w-16 text-center border-gray-300 rounded-md" min="1" />
                                                </div>

                                                <div class="text-right font-semibold">
                                            @item.ThanhTien.ToString("N0")đ
                                                </div>

                                                <form asp-controller="Cart" asp-action="RemoveFromCart" method="post" class="ml-4">
                                                    <input type="hidden" name="id" value="@item.ItemId" />
                                                    <input type="hidden" name="isCombo" value="@item.IsCombo.ToString()" />
                                                    <button type="submit" class="p-2 text-gray-400 hover:text-red-600 rounded-full hover:bg-red-50 transition-colors">
                                                        <i data-lucide="trash-2" class="h-5 w-5"></i>
                                                    </button>
                                                </form>
                                            </div>
                                }
                                </div>
                                 <div class="text-right mt-6">
                                    <button type="submit" class="bg-blue-500 text-white px-6 py-2 rounded-lg font-semibold hover:bg-blue-600 transition-colors">Cập nhật giỏ hàng</button>
                                </div>
                            </form>
                        </div>
                    </div>

                    <!-- Order Summary -->
                    <aside class="lg:col-span-1">
                        <div class="bg-white rounded-xl shadow-lg p-6 sticky top-8 animate-slide-up" style="animation-delay: 100ms;">
                            <h2 class="text-xl font-semibold mb-4">Tóm tắt đơn hàng</h2>
                            <div class="space-y-2 mb-4">
                                <div class="flex justify-between">
                                    <span>Tạm tính:</span>
                                    <span>@subtotal.ToString("N0")đ</span>
                                </div>
                                <div class="flex justify-between">
                                    <span>Phí giao hàng:</span>
                                    <span class="text-green-600">Miễn phí</span>
                                </div>
                                <div class="border-t pt-2 mt-2">
                                    <div class="flex justify-between font-bold text-lg">
                                        <span>Tổng cộng:</span>
                                        <span class="text-red-600">@subtotal.ToString("N0")đ</span>
                                    </div>
                                </div>
                            </div>

                            <a asp-controller="Checkout" asp-action="Index" class="w-full bg-red-600 text-white py-3 rounded-lg font-semibold hover:bg-red-700 transition-colors flex items-center justify-center space-x-2">
                                <i data-lucide="shopping-bag" class="h-5 w-5"></i>
                                <span>Tiến hành đặt hàng</span>
                            </a>
                            <p class="text-xs text-gray-500 text-center mt-3">Giảm giá thành viên sẽ được áp dụng ở bước tiếp theo.</p>
                        </div>
                    </aside>
                </div>
        }
    </div>
</div>

@section Scripts {
        <script>
            lucide.createIcons();
        </script>
}
