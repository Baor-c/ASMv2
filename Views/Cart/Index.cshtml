@model FastFoodApp.ViewModels.CartViewModel
@{
    ViewData["Title"] = "Giỏ hàng";
    string FormatPrice(decimal price) => price.ToString("N0") + "đ";
}

<div class="bg-gray-100 py-8">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">

        @if (Model.CartItems.Any())
        {
                <!-- Bố cục chính: 2 cột -->
                <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">

                    <!-- CỘT BÊN TRÁI: DANH SÁCH SẢN PHẨM VÀ GỢI Ý -->
                    <div class="lg:col-span-2 space-y-8">
                        <h1 class="text-4xl font-extrabold text-gray-900 tracking-tight">GIỎ HÀNG CỦA TÔI</h1>

                        <!-- Card chứa các sản phẩm trong giỏ -->
                        <div class="bg-white rounded-xl shadow-lg p-6 space-y-6">
                        @foreach (var item in Model.CartItems)
                        {
                                    <div class="flex flex-col sm:flex-row items-center space-y-4 sm:space-y-0 sm:space-x-6 border-b pb-6 last:border-b-0 last:pb-0">
                                        <img src="data:image/png;base64,@item.HinhAnh" alt="@item.TenSanPham" class="w-32 h-32 object-cover rounded-lg flex-shrink-0">

                                        <div class="flex-grow text-center sm:text-left">
                                            <p class="text-lg font-bold text-gray-800">@item.TenSanPham</p>
                                            <div class="flex items-center justify-center sm:justify-start space-x-3 mt-2">
                                                <a href="#" class="text-sm text-gray-600 hover:underline">Chỉnh sửa</a>
                                                <span class="text-gray-300">|</span>
                                                <form asp-action="RemoveCartItem" method="post" class="inline">
                                                    <input type="hidden" name="itemId" value="@item.ItemId" />
                                                    <input type="hidden" name="isCombo" value="@item.IsCombo.ToString()" />
                                                    <button type="submit" class="text-sm text-gray-600 hover:underline">Xóa</button>
                                                </form>
                                            </div>
                                        </div>

                                        <div class="flex items-center space-x-4">
                                             <form asp-action="UpdateCartItem" method="post" class="flex items-center">
                                                 <input type="hidden" name="itemId" value="@item.ItemId" />
                                                 <input type="hidden" name="isCombo" value="@item.IsCombo.ToString()" />
                                                <button type="submit" name="quantity" value="@(item.SoLuong - 1)" class="w-8 h-8 rounded-full border text-lg font-bold flex items-center justify-center hover:bg-gray-100">-</button>
                                                <input type="text" value="@item.SoLuong" readonly class="w-10 text-center font-bold border-none bg-transparent">
                                                <button type="submit" name="quantity" value="@(item.SoLuong + 1)" class="w-8 h-8 rounded-full border text-lg font-bold flex items-center justify-center hover:bg-gray-100">+</button>
                                            </form>
                                            <p class="text-lg font-bold text-gray-900 w-24 text-right">@FormatPrice(item.ThanhTien)</p>
                                        </div>
                                    </div>
                        }
                        </div>

                        <div class="bg-gray-800 text-white rounded-xl shadow-lg p-6">
                            <h2 class="text-2xl font-bold mb-4">SẼ NGON HƠN KHI THƯỞNG THỨC CÙNG...</h2>
                            <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
                            @foreach (var p in Model.RecommendedProducts)
                            {
                                        <div class="relative bg-white text-gray-800 rounded-lg p-3 text-center">
                                            <img src="data:image/png;base64,@(Convert.ToBase64String(p.HinhAnh ?? new byte[0]))" alt="@p.TenMonAn" class="w-full h-24 object-contain rounded-md mb-2">
                                            <h3 class="font-semibold text-sm h-10">@p.TenMonAn</h3>
                                            <p class="text-xs text-gray-500 mb-2">@FormatPrice(p.Gia)</p>
                                             <form asp-controller="Cart" asp-action="AddToCart" method="post">
                                                <input type="hidden" name="id" value="@p.MaMonAn" />
                                                <button type="submit" class="absolute -top-2 -right-2 w-7 h-7 bg-red-600 text-white rounded-full flex items-center justify-center text-xl font-bold hover:bg-red-700">+</button>
                                            </form>
                                        </div>
                            }
                            </div>
                        </div>
                    </div>

                    <!-- CỘT BÊN PHẢI: TÓM TẮT ĐƠN HÀNG -->
                    <div class="lg:col-span-1">
                        <div class="bg-white rounded-xl shadow-lg p-6 sticky top-8">
                            <h2 class="text-xl font-bold text-gray-900 mb-4">@Model.CartItems.Sum(i => i.SoLuong) MÓN</h2>

                            <div class="mb-4">
                                 <p class="font-semibold mb-2">Bạn có Mã giảm giá?</p>
                                 <div class="flex">
                                     <input type="text" placeholder="Mã giảm giá *" class="flex-grow border border-gray-300 rounded-l-full px-4 py-2 focus:outline-none focus:ring-2 focus:ring-red-500">
                                     <button class="bg-gray-800 text-white font-bold rounded-r-full px-6 py-2 hover:bg-black">Áp dụng</button>
                                 </div>
                            </div>

                            <div class="border-t pt-4 space-y-2">
                                <div class="flex justify-between">
                                    <span>Tổng đơn hàng</span>
                                    <span class="font-semibold">@FormatPrice(Model.Subtotal)</span>
                                </div>
                                 <div class="flex justify-between font-bold text-lg">
                                    <span>Tổng thanh toán</span>
                                    <span class="font-semibold">@FormatPrice(Model.Total)</span>
                                </div>
                            </div>

                            <a asp-controller="Checkout" asp-action="Index" class="mt-6 w-full bg-red-600 text-white rounded-full py-3 text-center font-bold text-lg block hover:bg-red-700 transition-transform transform hover:scale-105">
                                Thanh toán
                            </a>
                        </div>
                    </div>

                </div>
        }
        else
        {
                <div class="text-center py-20 bg-white rounded-xl shadow-lg">
                    <i data-lucide="shopping-cart" class="mx-auto h-24 w-24 text-gray-300"></i>
                    <h2 class="mt-6 text-2xl font-bold text-gray-800">Giỏ hàng của bạn đang trống</h2>
                    <p class="mt-2 text-gray-500">Hãy bắt đầu chọn những món ăn yêu thích nhé!</p>
                    <div class="mt-8">
                        <a asp-controller="Product" asp-action="Index" class="bg-red-600 text-white font-bold py-3 px-8 rounded-full hover:bg-red-700 transition-colors">
                            Bắt đầu mua sắm
                        </a>
                    </div>
                </div>
        }
    </div>
</div>

@section Scripts {
        <script>
            lucide.createIcons();
        </script>
}