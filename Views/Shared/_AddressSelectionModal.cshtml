@model IEnumerable<DiaChiNguoiDung>

<div id="address-modal-overlay" class="fixed inset-0 bg-black bg-opacity-60 flex items-center justify-center z-50 transition-opacity duration-300">
    <div id="address-modal" class="bg-white rounded-xl shadow-2xl w-full max-w-md transform transition-transform duration-300 scale-95 opacity-0">
        <div class="p-6 border-b flex justify-between items-center">
            <h3 class="text-xl font-bold text-gray-800">Chọn địa chỉ nhận hàng</h3>
            <button id="close-address-modal" class="text-gray-500 hover:text-gray-800">×</button>
        </div>
        <form id="address-selection-form">
            <div class="p-6 space-y-4 max-h-80 overflow-y-auto">
                @if (Model != null && Model.Any())
                {
                    @foreach (var address in Model)
                    {
                                <label class="flex items-start space-x-4 p-4 rounded-lg border border-gray-200 cursor-pointer hover:bg-red-50 hover:border-red-400 has-[:checked]:border-red-500 has-[:checked]:bg-red-50 has-[:checked]:ring-2 has-[:checked]:ring-red-300">
                                    <input type="radio" name="selectedAddressIdModal" value="@address.MaDiaChi" class="mt-1 h-4 w-4 text-red-600 border-gray-300 focus:ring-red-500" data-name="@address.TenNguoiNhan" data-phone="@address.SoDienThoai" data-details="@address.DiaChiCuThe" />
                                    <div class="flex-grow">
                                        <p class="font-semibold text-gray-800">@address.TenNguoiNhan</p>
                                        <p class="text-sm text-gray-600">@address.SoDienThoai</p>
                                        <p class="text-sm text-gray-600">@address.DiaChiCuThe</p>
                                @if (address.IsDefault)
                                {
                                                <span class="inline-block mt-1 px-2 py-0.5 text-xs font-semibold text-red-700 bg-red-100 border border-red-200 rounded-md">Mặc định</span>
                                }
                                    </div>
                                </label>
                    }
                }
                else
                {
                        <p class="text-center text-gray-500">Bạn chưa có địa chỉ nào. <a asp-controller="Account" asp-action="Profile" class="text-red-600 underline">Thêm địa chỉ</a></p>
                }
            </div>
            <div class="p-6 bg-gray-50 rounded-b-xl flex justify-end space-x-3">
                <button type="button" id="cancel-address-selection" class="px-6 py-2 rounded-lg border border-gray-300 text-gray-700 font-semibold hover:bg-gray-100">Hủy</button>
                <button type="submit" class="px-6 py-2 rounded-lg bg-red-600 text-white font-semibold hover:bg-red-700 disabled:bg-gray-400" disabled>Xác nhận</button>
            </div>
        </form>
    </div>
</div>