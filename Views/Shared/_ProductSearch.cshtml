@model FastFoodApp.ViewModels.ShopViewModel

<!-- Search Input -->
<div class="flex-1">
    <form asp-action="Index" method="get" class="relative">
        <div class="relative">
            <i data-lucide="search" class="absolute left-4 top-1/2 transform -translate-y-1/2 h-5 w-5 text-gray-400"></i>
            <input type="text" name="searchTerm" value="@Model.SearchTerm" 
                    placeholder="Tìm kiếm món ăn..." 
                    class="w-full pl-12 pr-4 py-3 border border-gray-200 rounded-xl focus:outline-none focus:ring-2 focus:ring-brand-500 focus:border-transparent text-gray-900 placeholder-gray-500">
        </div>
        <!-- Hidden fields to preserve filters -->
        @foreach (var categoryId in Model.CategoryIds)
        {
            <input type="hidden" name="categoryIds" value="@categoryId" />
        }
        <input type="hidden" name="minPrice" value="@Model.MinPrice" />
        <input type="hidden" name="maxPrice" value="@Model.MaxPrice" />
        <input type="hidden" name="sortBy" value="@Model.SortBy" />
    </form>
</div>
