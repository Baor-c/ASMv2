    <!-- External JS -->
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="https://unpkg.com/lucide@latest/dist/umd/lucide.min.js"></script>
    <script>
        // Đảm bảo icons được tạo sau khi DOM đã tải và thư viện Lucide đã sẵn sàng
        function initializeLucideIcons() {
            if (typeof lucide !== 'undefined' && lucide && lucide.createIcons) {
                try {
                    lucide.createIcons();
                    console.log('Lucide icons initialized successfully');
                } catch (error) {
                    console.error('Error initializing Lucide icons:', error);
                }
            } else {
                console.warn('Lucide library not ready yet, retrying in 200ms');
                setTimeout(initializeLucideIcons, 200);
            }
        }

        // Đợi DOM và tất cả tài nguyên tải xong
        window.addEventListener('load', initializeLucideIcons);
        
        tailwind.config = {
            theme: {
                extend: {
                    fontFamily: {
                        'sans': ['Poppins', 'Inter', 'system-ui', 'sans-serif'],
                    },
                    colors: {
                        'brand': {
                            50: '#fef2f2',
                            100: '#fee2e2',
                            500: '#ef4444',
                            600: '#dc2626',
                            700: '#b91c1c',
                            800: '#991b1b',
                            900: '#7f1d1d',
                        },
                        'accent': {
                            400: '#fbbf24',
                            500: '#f59e0b',
                            600: '#d97706',
                        }
                    },
                    animation: {
                        'fade-in': 'fadeIn 0.5s ease-in-out',
                        'slide-up': 'slideUp 0.5s ease-out',
                        'bounce-slow': 'bounce 2s infinite',
                    },
                    keyframes: {
                        fadeIn: {
                            '0%': { opacity: '0' },
                            '100%': { opacity: '1' }
                        },
                        slideUp: {
                            '0%': { transform: 'translateY(20px)', opacity: '0' },
                            '100%': { transform: 'translateY(0)', opacity: '1' }
                        }
                    }
                }
            }
        }
    </script>
    <style>
        /* Brand Colors */
        :root {
            --brand-50: #fef7f0;
            --brand-100: #fdeee1;
            --brand-200: #fbd5b7;
            --brand-300: #f8bc8d;
            --brand-400: #f5a363;
            --brand-500: #f28a3a;
            --brand-600: #e8721e;
            --brand-700: #d15a02;
            --brand-800: #a84501;
            --brand-900: #7e3400;
            --accent-400: #fbbf24;
            --accent-500: #f59e0b;
        }

        body {
            font-family: 'Poppins', 'Inter', sans-serif;
        }
        .glass-effect {
            backdrop-filter: blur(16px) saturate(180%);
            background-color: rgba(255, 255, 255, 0.75);
            border: 1px solid rgba(255, 255, 255, 0.125);
        }
        .navbar-blur {
            backdrop-filter: blur(20px) saturate(180%);
            background-color: rgba(255, 255, 255, 0.97);
            border-bottom: 1px solid rgba(0, 0, 0, 0.05);
            transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        }
        .navbar-transparent {
            backdrop-filter: none;
            background: transparent;
            border-bottom: 1px solid rgba(255, 255, 255, 0.1);
            transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        }
        .card-hover {
            transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
        }
        .card-hover:hover {
            transform: translateY(-8px);
            box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.25);
        }
        .hero-gradient {
            background: linear-gradient(135deg, #dc2626 0%, #b91c1c 25%, #d97706 75%, #f59e0b 100%);
        }

        /* Enhanced Animations */
        @@keyframes float {
            0%, 100% { transform: translateY(0px); }
            50% { transform: translateY(-20px); }
        }

        .float-animation {
            animation: float 6s ease-in-out infinite;
        }

        /* Text Glow Effect */
        .text-glow {
            text-shadow: 0 0 20px rgba(242, 138, 58, 0.5);
        }

        /* Pulse Animation for CTA Buttons */
        @@keyframes pulse-glow {
            0%, 100% { 
                box-shadow: 0 0 20px rgba(242, 138, 58, 0.3);
            }
            50% { 
                box-shadow: 0 0 30px rgba(242, 138, 58, 0.6);
            }
        }

        .pulse-glow {
            animation: pulse-glow 2s ease-in-out infinite;
        }

        /* Line Clamp Utility */
        .line-clamp-2 {
            display: -webkit-box;
            -webkit-line-clamp: 2;
            -webkit-box-orient: vertical;
            overflow: hidden;
        }

        /* Enhanced Button Styles */
        .btn-gradient {
            background: linear-gradient(135deg, var(--brand-600), var(--accent-500));
            position: relative;
            overflow: hidden;
        }

        .btn-gradient::before {
            content: '';
            position: absolute;
            top: 0;
            left: -100%;
            width: 100%;
            height: 100%;
            background: linear-gradient(90deg, transparent, rgba(255,255,255,0.2), transparent);
            transition: left 0.5s;
        }

        .btn-gradient:hover::before {
            left: 100%;
        }

        /* Scroll Smooth */
        html {
            scroll-behavior: smooth;
        }

        /* Custom Scrollbar */
        ::-webkit-scrollbar {
            width: 8px;
        }

        ::-webkit-scrollbar-track {
            background: #f1f1f1;
        }

        ::-webkit-scrollbar-thumb {
            background: linear-gradient(135deg, var(--brand-600), var(--accent-500));
            border-radius: 4px;
        }

        ::-webkit-scrollbar-thumb:hover {
            background: linear-gradient(135deg, var(--brand-700), var(--accent-600));
        }
    </style>
</head>
