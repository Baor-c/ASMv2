@model FastFoodApp.ViewModels.ShopViewModel
@{
    ViewData["Title"] = "Thực đơn";
}

<div class="min-h-screen bg-gray-50 py-8">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <!-- Page Header -->
        <div class="mb-8 animate-fade-in">
            <h1 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">
                Thực Đơn FastBite
            </h1>
            <p class="text-lg text-gray-600">
                Khám phá hàng trăm món ăn ngon được chế biến tươi mỗi ngày.
            </p>
        </div>

        <!-- Search & Filter Section -->
        <div class="bg-white p-6 rounded-xl shadow-lg mb-8 animate-slide-up">
            <!-- Search Bar -->
            <form asp-action="Index" method="get" class="mb-6">
                <div class="relative">
                    <input type="text" name="searchTerm" value="@Model.SearchTerm"
                           placeholder="Tìm kiếm theo tên món, mô tả..."
                           class="w-full pl-12 pr-4 py-3 border border-gray-300 rounded-xl focus:outline-none focus:ring-2 focus:ring-red-500 text-lg" />
                    <i data-lucide="search" class="absolute left-4 top-1/2 transform -translate-y-1/2 h-5 w-5 text-gray-400"></i>
                    <button type="submit" class="absolute right-2 top-1/2 transform -translate-y-1/2 bg-red-600 text-white px-6 py-2 rounded-lg hover:bg-red-700 transition-colors font-medium">
                        Tìm
                    </button>
                </div>
            </form>

            <!-- Category Filters -->
            <div>
                <h3 class="text-lg font-semibold text-gray-900 mb-4">Danh mục</h3>
                <div class="flex flex-wrap gap-3">
                    <a asp-action="Index" asp-all-route-data="@Context.Request.Query.ToDictionary(q => q.Key, q => q.Value.ToString())" asp-route-categoryId=""
                       class="px-4 py-2 rounded-full font-medium transition-colors flex items-center space-x-2 @(Model.CategoryId == null ? "bg-red-600 text-white" : "bg-gray-100 text-gray-700 hover:bg-gray-200")">
                        <span>🍽️</span>
                        <span>Tất cả</span>
                    </a>
                    @foreach (var category in Model.Categories)
                    {
                            <a asp-action="Index" asp-all-route-data="@Context.Request.Query.ToDictionary(q => q.Key, q => q.Value.ToString())" asp-route-categoryId="@category.MaLoai"
                               class="px-4 py-2 rounded-full font-medium transition-colors flex items-center space-x-2 @(Model.CategoryId == category.MaLoai ? "bg-red-600 text-white" : "bg-gray-100 text-gray-700 hover:bg-gray-200")">
                                <span>@(category.TenLoai.Contains("Gà") ? "🍗" : category.TenLoai.Contains("Burger") ? "🍔" : category.TenLoai.Contains("Nước") ? "🥤" : "🍟")</span>
                                <span>@category.TenLoai</span>
                            </a>
                    }
                </div>
            </div>
        </div>

        <!-- Results Info -->
        <div class="mb-6 animate-fade-in" style="animation-delay: 200ms;">
            <p class="text-gray-600">
                Hiển thị <span class="font-semibold text-red-600">@(Model.Products.Count + Model.Combos.Count)</span> kết quả
                @if (!string.IsNullOrEmpty(Model.SearchTerm))
                {
                        <span> cho "@Model.SearchTerm"</span>
                }
            </p>
        </div>

        <!-- Menu Grid -->
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-8">
            <!-- Combos -->
            @foreach (var item in Model.Combos)
            {
                    <div class="bg-white rounded-2xl shadow-lg overflow-hidden group transform hover:-translate-y-2 transition-all duration-300 animate-slide-up">
                        <div class="relative h-48 overflow-hidden">
                            <img src="data:image/png;base64,@Convert.ToBase64String(item.HinhAnh ?? new byte[0])" alt="@item.TenCombo" class="w-full h-full object-cover transform group-hover:scale-105 transition-transform duration-300" />
                            <span class="absolute top-3 left-3 bg-yellow-400 text-yellow-900 px-2 py-1 rounded-full text-xs font-bold">COMBO</span>
                        </div>
                        <div class="p-6 flex flex-col flex-grow">
                            <h3 class="text-xl font-bold text-gray-900 mb-2 group-hover:text-red-600 transition-colors truncate">
                                <a asp-controller="Product" asp-action="DetailsCombo" asp-route-id="@item.MaCombo">@item.TenCombo</a>
                            </h3>
                            <p class="text-gray-600 text-sm mb-4 line-clamp-2 flex-grow">@item.MoTa</p>
                            <div class="flex items-center justify-between mt-auto">
                                <span class="text-2xl font-bold text-red-600">@item.Gia.ToString("N0")đ</span>
                                <form asp-controller="Cart" asp-action="AddComboToCart" method="post">
                                    <input type="hidden" name="id" value="@item.MaCombo" />
                                    <button type="submit" class="bg-red-100 text-red-600 p-2 rounded-full hover:bg-red-600 hover:text-white transition-all transform hover:scale-110">
                                        <i data-lucide="plus" class="h-5 w-5"></i>
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>
            }
            <!-- Products -->
            @foreach (var item in Model.Products)
            {
                    <div class="bg-white rounded-2xl shadow-lg overflow-hidden group transform hover:-translate-y-2 transition-all duration-300 animate-slide-up">
                        <div class="relative h-48 overflow-hidden">
                            <img src="data:image/png;base64,@Convert.ToBase64String(item.HinhAnh ?? new byte[0])" alt="@item.TenMonAn" class="w-full h-full object-cover transform group-hover:scale-105 transition-transform duration-300" />
                        </div>
                        <div class="p-6 flex flex-col flex-grow">
                            <h3 class="text-xl font-bold text-gray-900 mb-2 group-hover:text-red-600 transition-colors truncate">
                                <a asp-controller="Product" asp-action="Details" asp-route-id="@item.MaMonAn">@item.TenMonAn</a>
                            </h3>
                            <p class="text-gray-600 text-sm mb-4 line-clamp-2 flex-grow">@item.MoTa</p>
                            <div class="flex items-center justify-between mt-auto">
                                <span class="text-2xl font-bold text-red-600">@item.Gia.ToString("N0")đ</span>
                                <form asp-controller="Cart" asp-action="AddToCart" method="post">
                                    <input type="hidden" name="id" value="@item.MaMonAn" />
                                    <button type="submit" class="bg-red-100 text-red-600 p-2 rounded-full hover:bg-red-600 hover:text-white transition-all transform hover:scale-110">
                                        <i data-lucide="plus" class="h-5 w-5"></i>
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>
            }
        </div>
    </div>
</div>

<!-- Script để kích hoạt icons -->
<script>
    lucide.createIcons();
</script>
