@model FastFoodApp.ViewModels.ProductDetailViewModel
@{
    ViewData["Title"] = Model.Product.TenMonAn;
}

<div class="min-h-screen bg-white py-8">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
            <div class="animate-fade-in">
                <div class="aspect-w-1 aspect-h-1 w-full overflow-hidden rounded-lg shadow-lg">
                    <img src="data:image/png;base64,@Convert.ToBase64String(Model.Product.HinhAnh ?? new byte[0])" alt="@Model.Product.TenMonAn" class="w-full h-full object-cover" />
                </div>
            </div>

            <div class="animate-slide-up">
                <h1 class="text-3xl font-bold text-gray-900 mb-2">@Model.Product.TenMonAn</h1>
                <p class="text-gray-600 mb-4">@Model.Product.MoTa</p>
                <p class="text-3xl font-bold text-red-600 mb-6">@Model.Product.Gia.ToString("N0")đ</p>

                @if (TempData["SuccessMessage"] != null)
                {
                        <div class="bg-green-100 border-l-4 border-green-500 text-green-700 p-4 mb-6" role="alert">
                            <p>@TempData["SuccessMessage"]</p>
                        </div>
                }

                <form asp-action="AddToCartWithOptions" method="post">
                    <input type="hidden" asp-for="CartInput.ProductId" />

                    <div class="mb-6">
                        <h3 class="font-semibold text-gray-900 mb-3">Tùy chỉnh món ăn</h3>
                        <div class="space-y-3">
                            <label class="flex items-center justify-between cursor-pointer p-3 border border-gray-200 rounded-lg hover:bg-gray-50 transition-colors">
                                <div class="flex items-center space-x-3">
                                    <span class="text-2xl">🌶️</span>
                                    <div>
                                        <p class="font-medium">Thêm cay</p>
                                        <p class="text-sm text-gray-600">Làm cho món ăn cay hơn</p>
                                    </div>
                                </div>
                                <input type="checkbox" asp-for="CartInput.IsSpicy" class="rounded text-red-600 focus:ring-red-500" />
                            </label>
                            <label class="flex items-center justify-between cursor-pointer p-3 border border-gray-200 rounded-lg hover:bg-gray-50 transition-colors">
                                <div class="flex items-center space-x-3">
                                    <span class="text-2xl">🚫</span>
                                    <div>
                                        <p class="font-medium">Không rau</p>
                                        <p class="text-sm text-gray-600">Bỏ tất cả rau trong món</p>
                                    </div>
                                </div>
                                <input type="checkbox" asp-for="CartInput.NoVegetables" class="rounded text-red-600 focus:ring-red-500" />
                            </label>
                            <label class="flex items-center justify-between cursor-pointer p-3 border border-gray-200 rounded-lg hover:bg-gray-50 transition-colors">
                                <div class="flex items-center space-x-3">
                                    <span class="text-2xl">🥫</span>
                                    <div>
                                        <p class="font-medium">Thêm sốt</p>
                                        <p class="text-sm text-gray-600">Thêm một lớp sốt đặc biệt</p>
                                    </div>
                                </div>
                                <input type="checkbox" asp-for="CartInput.ExtraSauce" class="rounded text-red-600 focus:ring-red-500" />
                            </label>
                        </div>
                    </div>

                    <div class="mb-6">
                        <label class="block text-sm font-medium text-gray-700 mb-2">Số lượng</label>
                        <div class="flex items-center space-x-4">
                            <input type="number" asp-for="CartInput.Quantity" class="w-20 text-center border-gray-300 rounded-md" min="1" />
                        </div>
                    </div>

                    <button type="submit" class="w-full bg-red-600 text-white py-3 rounded-lg font-semibold hover:bg-red-700 transition-colors">
                        Thêm vào giỏ hàng
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>
