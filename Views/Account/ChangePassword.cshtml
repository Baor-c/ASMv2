@model FastFoodApp.ViewModels.ChangePasswordViewModel
@{
    ViewData["Title"] = "Đổi mật khẩu";
}

<div class="min-h-screen bg-gray-50 py-8">
    <div class="max-w-md mx-auto px-4 sm:px-6 lg:px-8">
        <!-- Header -->
        <div class="mb-8 animate-fade-in">
            <h1 class="text-3xl font-bold text-gray-900 mb-2">Đổi mật khẩu</h1>
            <p class="text-gray-600">Cập nhật mật khẩu tài khoản của bạn.</p>
        </div>

        <!-- Change Password Form -->
        <div class="bg-white rounded-xl shadow-lg p-6 animate-slide-up">
            <form asp-action="ChangePassword" method="post" class="space-y-6">
                @Html.AntiForgeryToken()
                <div asp-validation-summary="ModelOnly" class="text-red-500 mb-4"></div>

                <div>
                    <label asp-for="MatKhauHienTai" class="block text-sm font-medium text-gray-700 mb-1">
                        <i data-lucide="lock" class="inline h-4 w-4 mr-1"></i>Mật khẩu hiện tại
                    </label>
                    <input asp-for="MatKhauHienTai" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-red-500" />
                    <span asp-validation-for="MatKhauHienTai" class="text-red-500 text-sm"></span>
                </div>

                <div>
                    <label asp-for="MatKhauMoi" class="block text-sm font-medium text-gray-700 mb-1">
                        <i data-lucide="key" class="inline h-4 w-4 mr-1"></i>Mật khẩu mới
                    </label>
                    <input asp-for="MatKhauMoi" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-red-500" />
                    <span asp-validation-for="MatKhauMoi" class="text-red-500 text-sm"></span>
                </div>

                <div>
                    <label asp-for="XacNhanMatKhauMoi" class="block text-sm font-medium text-gray-700 mb-1">
                        <i data-lucide="check-circle" class="inline h-4 w-4 mr-1"></i>Xác nhận mật khẩu mới
                    </label>
                    <input asp-for="XacNhanMatKhauMoi" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-red-500" />
                    <span asp-validation-for="XacNhanMatKhauMoi" class="text-red-500 text-sm"></span>
                </div>

                <div class="flex justify-between items-center pt-4">
                    <a asp-action="Profile" class="text-gray-600 hover:text-gray-800 flex items-center">
                        <i data-lucide="arrow-left" class="h-4 w-4 mr-1"></i> Quay lại
                    </a>
                    <button type="submit" class="bg-red-600 text-white px-6 py-2 rounded-lg font-semibold hover:bg-red-700 transition-colors flex items-center">
                        <i data-lucide="save" class="h-4 w-4 mr-2"></i>
                        <span>Cập nhật mật khẩu</span>
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        lucide.createIcons();
    </script>
}
