@model FastFoodApp.ViewModels.LoginViewModel
@{
    ViewData["Title"] = "Đăng nhập";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="min-h-screen bg-gradient-to-br from-red-50 via-white to-yellow-50 py-12">
    <div class="max-w-md mx-auto px-4">
        <div class="bg-white rounded-2xl shadow-xl overflow-hidden animate-zoom-in">
            <!-- Header -->
            <div class="bg-gradient-to-r from-red-600 to-yellow-500 p-6 text-white text-center">
                <div class="text-4xl mb-2">🍔</div>
                <h1 class="text-2xl font-bold">Chào mừng trở lại!</h1>
                <p class="opacity-90 mt-1">Đăng nhập để tiếp tục</p>
            </div>

            <!-- Toggle Buttons -->
            <div class="flex p-2 bg-gray-50">
                <a asp-action="Login" class="flex-1 py-2 px-4 rounded-lg font-medium bg-red-600 text-white text-center">Đăng nhập</a>
                <a asp-action="Register" class="flex-1 py-2 px-4 rounded-lg font-medium text-gray-600 hover:text-red-600 text-center">Đăng ký</a>
            </div>

            <!-- Form -->
            <div class="p-6">
                @if (TempData["ErrorMessage"] != null)
                {
                        <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative mb-4" role="alert">
                            <span class="block sm:inline">@TempData["ErrorMessage"]</span>
                        </div>
                }
                <form asp-action="Login" method="post" class="space-y-4">
                    <div asp-validation-summary="ModelOnly" class="text-red-600 text-sm"></div>
                    <div>
                        <div class="relative">
                            <i data-lucide="mail" class="absolute left-3 top-1/2 transform -translate-y-1/2 h-5 w-5 text-gray-400"></i>
                            <input asp-for="Email" placeholder="Email" class="w-full pl-10 pr-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-red-500" />
                        </div>
                        <span asp-validation-for="Email" class="text-red-600 text-sm"></span>
                    </div>
                    <div>
                        <div class="relative">
                            <i data-lucide="lock" class="absolute left-3 top-1/2 transform -translate-y-1/2 h-5 w-5 text-gray-400"></i>
                            <input asp-for="MatKhau" placeholder="Mật khẩu" class="w-full pl-10 pr-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-red-500" />
                        </div>
                        <span asp-validation-for="MatKhau" class="text-red-600 text-sm"></span>
                    </div>
                    <div class="flex items-center">
                        <input asp-for="RememberMe" class="h-4 w-4 text-red-600 focus:ring-red-500 border-gray-300 rounded" />
                        <label asp-for="RememberMe" class="ml-2 block text-sm text-gray-900">Ghi nhớ đăng nhập</label>
                    </div>
                    <button type="submit" class="w-full bg-red-600 text-white py-3 rounded-lg font-semibold hover:bg-red-700 transition-colors">
                        Đăng nhập
                    </button>
                </form>

                <!-- Divider -->
                <div class="mt-6">
                    <div class="relative">
                        <div class="absolute inset-0 flex items-center">
                            <div class="w-full border-t border-gray-300"></div>
                        </div>
                        <div class="relative flex justify-center text-sm">
                            <span class="px-2 bg-white text-gray-500">hoặc</span>
                        </div>
                    </div>
                </div>

                <!-- Google Login -->
                <div class="mt-4">
                    <form asp-controller="Account" asp-action="ExternalLogin" method="post">
                         <input type="hidden" name="provider" value="Google" />
                         <button type="submit" class="w-full bg-white border border-gray-300 text-gray-700 py-3 px-4 rounded-lg font-medium hover:bg-gray-50 transition-colors flex items-center justify-center">
                            <svg class="w-5 h-5 mr-2" viewBox="0 0 24 24">
                                <path fill="#EA4335" d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z"/>
                                <path fill="#34A853" d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z"/>
                                <path fill="#FBBC05" d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z"/>
                                <path fill="#EA4335" d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z"/>
                            </svg>
                            Đăng nhập với Google
                        </button>
                    </form>
                </div>

            </div>
        </div>
    </div>
</div>

@section Scripts {
        <partial name="_ValidationScriptsPartial" />
        <script>
            lucide.createIcons();
        </script>
}
