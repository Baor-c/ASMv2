 @model FastFoodApp.Areas.Admin.Models.ProductViewModel

@Html.AntiForgeryToken()
<div asp-validation-summary="ModelOnly" class="text-red-600 text-sm mb-4"></div>
<input type="hidden" asp-for="MaMonAn" />

<div class="grid grid-cols-1 md:grid-cols-2 gap-4">
    <div>
        <label asp-for="TenMonAn" class="block text-sm font-medium text-gray-700 mb-1">Tên sản phẩm</label>
        <input asp-for="TenMonAn" class="w-full px-3 py-2 border border-gray-300 rounded-lg" />
        <span asp-validation-for="TenMonAn" class="text-red-500 text-sm"></span>
    </div>
    <div>
        <label asp-for="MaLoai" class="block text-sm font-medium text-gray-700 mb-1">Danh mục</label>
        <select asp-for="MaLoai" class="w-full px-3 py-2 border border-gray-300 rounded-lg" asp-items="ViewBag.MaLoai">
            <option value="">-- Chọn danh mục --</option>
        </select>
        <span asp-validation-for="MaLoai" class="text-red-500 text-sm"></span>
    </div>
    <div class="md:col-span-2">
        <label asp-for="MoTa" class="block text-sm font-medium text-gray-700 mb-1">Mô tả</label>
        <textarea asp-for="MoTa" rows="3" class="w-full px-3 py-2 border border-gray-300 rounded-lg"></textarea>
    </div>
    <div>
        <label asp-for="Gia" class="block text-sm font-medium text-gray-700 mb-1">Giá bán (VND)</label>
        <input asp-for="Gia" type="number" class="w-full px-3 py-2 border border-gray-300 rounded-lg" />
        <span asp-validation-for="Gia" class="text-red-500 text-sm"></span>
    </div>
    <div>
        <label asp-for="HinhAnhFile" class="block text-sm font-medium text-gray-700 mb-1">Hình ảnh</label>
        <input asp-for="HinhAnhFile" type="file" accept="image/*" class="w-full text-sm text-gray-500 file:mr-4 file:py-2 file:px-4 file:rounded-full file:border-0 file:bg-red-50 file:text-red-700 hover:file:bg-red-100"/>
        <span asp-validation-for="HinhAnhFile" class="text-red-500 text-sm"></span>
        
        @if (Model.HinhAnh != null && Model.HinhAnh.Length > 0)
        {
            <div class="mt-2">
                <p class="text-sm text-gray-600 mb-2">Ảnh hiện tại:</p>
                <img src="data:image/jpeg;base64,@Convert.ToBase64String(Model.HinhAnh)" class="h-24 w-24 object-cover rounded-lg border" alt="Current image" />
                <p class="text-xs text-gray-500 mt-1">Chỉ tải lên ảnh mới nếu bạn muốn thay đổi ảnh</p>
            </div>
        }
    </div>
</div>