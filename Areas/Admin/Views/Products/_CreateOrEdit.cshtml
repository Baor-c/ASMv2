@model ASM1.Models.MonAn

<div class="grid grid-cols-1 md:grid-cols-2 gap-6">
    <div>
        <label asp-for="TenMonAn" class="block text-sm font-medium text-gray-700 mb-1">Tên sản phẩm</label>
        <input asp-for="TenMonAn" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-red-500" />
        <span asp-validation-for="TenMonAn" class="text-red-500 text-sm"></span>
    </div>
    <div>
        <label asp-for="MaLoai" class="block text-sm font-medium text-gray-700 mb-1">Danh mục</label>
        <select asp-for="MaLoai" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-red-500" asp-items="ViewBag.MaLoai">
            <option value="">-- Chọn danh mục --</option>
        </select>
        <span asp-validation-for="MaLoai" class="text-red-500 text-sm"></span>
    </div>
    <div class="md:col-span-2">
        <label asp-for="MoTa" class="block text-sm font-medium text-gray-700 mb-1">Mô tả</label>
        <textarea asp-for="MoTa" rows="4" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-red-500"></textarea>
        <span asp-validation-for="MoTa" class="text-red-500 text-sm"></span>
    </div>
    <div>
        <label asp-for="Gia" class="block text-sm font-medium text-gray-700 mb-1">Giá bán (VND)</label>
        <input asp-for="Gia" type="number" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-red-500" />
        <span asp-validation-for="Gia" class="text-red-500 text-sm"></span>
    </div>
    <div>
        <label for="HinhAnhFile" class="block text-sm font-medium text-gray-700 mb-1">Hình ảnh</label>
        <input name="HinhAnhFile" id="HinhAnhFile" type="file" accept="image/*" class="w-full text-sm text-gray-500 file:mr-4 file:py-2 file:px-4 file:rounded-full file:border-0 file:text-sm file:font-semibold file:bg-red-50 file:text-red-700 hover:file:bg-red-100"/>
        @if (Model?.HinhAnh != null && Model.HinhAnh.Length > 0)
        {
            <div class="mt-2">
                <img src="data:image/jpeg;base64,@Convert.ToBase64String(Model.HinhAnh)" class="h-24 w-24 object-cover rounded-lg border" alt="Ảnh hiện tại" />
                <p class="text-xs text-gray-500 mt-1">Ảnh hiện tại (chọn ảnh mới để thay đổi)</p>
            </div>
        }
    </div>
</div>
