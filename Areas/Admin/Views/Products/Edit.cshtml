@model ASM1.Models.MonAn
@{
    ViewData["Title"] = "Chỉnh sửa Sản phẩm";
}

<div class="max-w-3xl mx-auto bg-white p-8 rounded-lg shadow-sm">
    <h2 class="text-2xl font-semibold text-gray-800 mb-6">Chỉnh sửa: @Model.TenMonAn</h2>
    <form asp-action="EditPost" method="post" enctype="multipart/form-data">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="MaMonAn" />
        <div class="space-y-6">
            <partial name="_CreateOrEdit" model="Model" />
        </div>
        <div class="flex items-center justify-end space-x-4 pt-6 mt-6 border-t">
            <a asp-action="Index" class="border border-gray-300 text-gray-700 px-6 py-2 rounded-lg hover:bg-gray-50">Hủy</a>
            <button type="submit" class="bg-red-600 text-white px-6 py-2 rounded-lg font-semibold hover:bg-red-700">Cập nhật</button>
        </div>
    </form>
</div>
