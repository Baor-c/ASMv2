@model ASM1.Models.Combo
@{
    ViewData["Title"] = "Thêm Combo mới";
}

<div class="max-w-2xl mx-auto bg-white p-8 rounded-lg shadow-sm">
    <h2 class="text-2xl font-semibold text-gray-800 mb-6">Thông tin Combo</h2>
    <form asp-action="Create" method="post" class="space-y-6" enctype="multipart/form-data">
        @Html.AntiForgeryToken()
        <div asp-validation-summary="ModelOnly" class="text-red-600 text-sm"></div>

        <div>
            <label asp-for="TenCombo" class="block text-sm font-medium text-gray-700 mb-1">Tên Combo</label>
            <input asp-for="TenCombo" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-red-500" />
            <span asp-validation-for="TenCombo" class="text-red-500 text-sm"></span>
        </div>

        <div>
            <label asp-for="MoTa" class="block text-sm font-medium text-gray-700 mb-1">Mô tả</label>
            <textarea asp-for="MoTa" rows="3" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-red-500"></textarea>
            <span asp-validation-for="MoTa" class="text-red-500 text-sm"></span>
        </div>

        <div>
            <label asp-for="Gia" class="block text-sm font-medium text-gray-700 mb-1">Giá bán (VND)</label>
            <input asp-for="Gia" type="number" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-red-500" />
            <span asp-validation-for="Gia" class="text-red-500 text-sm"></span>
        </div>

        <div>
            <label for="HinhAnhFile" class="block text-sm font-medium text-gray-700 mb-1">Hình ảnh</label>
            <input name="HinhAnhFile" id="HinhAnhFile" type="file" class="w-full text-sm text-gray-500 file:mr-4 file:py-2 file:px-4 file:rounded-full file:border-0 file:text-sm file:font-semibold file:bg-red-50 file:text-red-700 hover:file:bg-red-100"/>
        </div>

        <div class="flex items-center justify-end space-x-4 pt-4">
            <a asp-action="Index" class="border border-gray-300 text-gray-700 px-6 py-2 rounded-lg hover:bg-gray-50 transition-colors">Hủy</a>
            <button type="submit" class="bg-red-600 text-white px-6 py-2 rounded-lg font-semibold hover:bg-red-700 transition-colors flex items-center space-x-2">
                <i data-lucide="save" class="h-4 w-4"></i>
                <span>Lưu</span>
            </button>
        </div>
    </form>
</div>
