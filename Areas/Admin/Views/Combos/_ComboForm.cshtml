@model ASM1.Models.Combo

@Html.AntiForgeryToken()
<div asp-validation-summary="ModelOnly" class="text-red-600 text-sm mb-4"></div>
<input type="hidden" asp-for="MaCombo" />

<div class="space-y-4">
    <div>
        <label asp-for="TenCombo" class="block text-sm font-medium text-gray-700 mb-1">Tên Combo</label>
        <input asp-for="TenCombo" class="w-full px-3 py-2 border border-gray-300 rounded-lg" />
        <span asp-validation-for="TenCombo" class="text-red-500 text-sm"></span>
    </div>
    <div>
        <label asp-for="MoTa" class="block text-sm font-medium text-gray-700 mb-1">Mô tả</label>
        <textarea asp-for="MoTa" rows="3" class="w-full px-3 py-2 border border-gray-300 rounded-lg"></textarea>
        <span asp-validation-for="MoTa" class="text-red-500 text-sm"></span>
    </div>
    <div>
        <label asp-for="Gia" class="block text-sm font-medium text-gray-700 mb-1">Giá bán (VND)</label>
        <input asp-for="Gia" type="number" class="w-full px-3 py-2 border border-gray-300 rounded-lg" />
        <span asp-validation-for="Gia" class="text-red-500 text-sm"></span>
    </div>
    <div>
        <label for="HinhAnhFile" class="block text-sm font-medium text-gray-700 mb-1">Hình ảnh</label>
        <input name="HinhAnhFile" id="HinhAnhFile" type="file" 
               accept="image/*" 
               class="w-full text-sm text-gray-500 file:mr-4 file:py-2 file:px-4 file:rounded-full file:border-0 file:bg-red-50 file:text-red-700 hover:file:bg-red-100"/>
        <span class="text-red-500 text-sm" data-valmsg-for="HinhAnhFile" data-valmsg-replace="true"></span>
        
        @if (Model?.HinhAnh != null && Model.HinhAnh.Length > 0)
        {
            <div class="mt-2">
                <p class="text-sm text-gray-600 mb-2">Ảnh hiện tại:</p>
                <img src="data:image/png;base64,@Convert.ToBase64String(Model.HinhAnh)" alt="Ảnh hiện tại" class="w-32 h-32 object-cover rounded-lg border" />
                <p class="text-xs text-gray-500 mt-1">Chỉ tải lên ảnh mới nếu bạn muốn thay đổi ảnh</p>
            </div>
        }
    </div>
</div>
