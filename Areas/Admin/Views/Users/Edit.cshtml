@model ASM1.Models.NguoiDung
@{
    ViewData["Title"] = "Chỉnh sửa Người dùng";
}

<div class="max-w-2xl mx-auto bg-white p-8 rounded-lg shadow-sm">
    <h2 class="text-2xl font-semibold text-gray-800 mb-6">Chỉnh sửa: @Model.HoTen</h2>
    <form asp-action="Edit" method="post" class="space-y-6">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="MaNguoiDung" />
        <div asp-validation-summary="ModelOnly" class="text-red-600 text-sm"></div>

        <div>
            <label asp-for="HoTen" class="block text-sm font-medium text-gray-700 mb-1">Họ và tên</label>
            <input asp-for="HoTen" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-red-500" />
            <span asp-validation-for="HoTen" class="text-red-500 text-sm"></span>
        </div>
        <div>
            <label asp-for="Email" class="block text-sm font-medium text-gray-700 mb-1">Email</label>
            <input asp-for="Email" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-red-500" />
            <span asp-validation-for="Email" class="text-red-500 text-sm"></span>
        </div>
        <div>
            <label asp-for="SoDienThoai" class="block text-sm font-medium text-gray-700 mb-1">Số điện thoại</label>
            <input asp-for="SoDienThoai" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-red-500" />
            <span asp-validation-for="SoDienThoai" class="text-red-500 text-sm"></span>
        </div>
        <div>
            <label asp-for="NgaySinh" class="block text-sm font-medium text-gray-700 mb-1">Ngày sinh</label>
            <input asp-for="NgaySinh" type="date" asp-format="{0:yyyy-MM-dd}" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-red-500" />
            <span asp-validation-for="NgaySinh" class="text-red-500 text-sm"></span>
        </div>
        <div>
            <label asp-for="MaVaiTro" class="block text-sm font-medium text-gray-700 mb-1">Vai trò</label>
            <select asp-for="MaVaiTro" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-red-500" asp-items="ViewBag.MaVaiTro"></select>
            <span asp-validation-for="MaVaiTro" class="text-red-500 text-sm"></span>
        </div>

        <div class="flex items-center justify-end space-x-4 pt-4">
            <a asp-action="Index" class="border border-gray-300 text-gray-700 px-6 py-2 rounded-lg hover:bg-gray-50 transition-colors">Hủy</a>
            <button type="submit" class="bg-red-600 text-white px-6 py-2 rounded-lg font-semibold hover:bg-red-700 transition-colors flex items-center space-x-2">
                <i data-lucide="save" class="h-4 w-4"></i>
                <span>Cập nhật</span>
            </button>
        </div>
    </form>
</div>
