@model ASM1.Models.NguoiDung
@{
    ViewData["Title"] = "Xác nhận Xóa";
}

<div class="max-w-2xl mx-auto bg-white p-8 rounded-lg shadow-sm border border-red-200">
    <h2 class="text-2xl font-semibold text-red-800 mb-4">Bạn có chắc chắn muốn xóa?</h2>
    <p class="text-gray-600 mb-6">Hành động này sẽ xóa vĩnh viễn người dùng <strong class="text-gray-900">@Model.HoTen</strong> và không thể hoàn tác.</p>

    <div class="space-y-4 mb-6">
        <div class="grid grid-cols-3 gap-4">
            <dt class="text-sm font-medium text-gray-500">Họ và tên</dt>
            <dd class="col-span-2 text-sm text-gray-900">@Model.HoTen</dd>
        </div>
        <div class="grid grid-cols-3 gap-4">
            <dt class="text-sm font-medium text-gray-500">Email</dt>
            <dd class="col-span-2 text-sm text-gray-900">@Model.Email</dd>
        </div>
    </div>

    <form asp-action="Delete" method="post">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="MaNguoiDung" />
        <div class="flex items-center justify-end space-x-4 pt-4 mt-6 border-t">
            <a asp-action="Index" class="border border-gray-300 text-gray-700 px-6 py-2 rounded-lg hover:bg-gray-50 transition-colors">Hủy</a>
            <button type="submit" class="bg-red-600 text-white px-6 py-2 rounded-lg font-semibold hover:bg-red-700 transition-colors">Xác nhận Xóa</button>
        </div>
    </form>
</div>
